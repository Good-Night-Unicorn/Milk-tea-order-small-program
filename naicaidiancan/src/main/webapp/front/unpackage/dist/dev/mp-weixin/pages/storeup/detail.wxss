.container:after {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  content: '';
  background-attachment: fixed;
  background-size: cover;
  background-position: center;
}
.swiper {
  width: 100%;
  height: 450rpx;
}
.swiper image {
  width: 100%;
}
.detail-content {
  font-size: 28rpx;
  color: #888888;
  background: #FFFFFF;
  line-height: 45rpx;
}
.detail-content .name {
  font-size: 38rpx;
  font-weight: blod;
  padding-top: 20rpx;
}
.detail-content .price {
  font-size: 33rpx;
  color: red;
}
.time-content {
  background: #FFFFFF;
  padding: 30rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.time-content .header {
  font-size: 33rpx;
  margin-bottom: 20rpx;
}
.bottom-content {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.comoment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 12rpx;
}
.comoment-header .btn-comment-content {
  color: #DD514C;
  font-weight: bold;
  padding: 0 12rpx;
}
.comment-item {
  margin-bottom: 10rpx;
  border-bottom: 1px solid #EEEEEE;
  padding-bottom: 20rpx;
}
.comment-item .content {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.icon {
  width: 50rpx;
  height: 50rpx;
}
.popup-content .popup-form {
  background: #FFFFFF;
  margin-top: 20rpx;
}
.popup-content .btn-content {
  text-align: right;
  background: #FFFFFF;
}
.popup-content .btn-content button {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.detail-list-item {
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 68rpx;
  border-bottom: 2rpx solid #efefef;
  background-color: #fff;
}
.detail-list-item .lable {
  font-size: 28rpx;
  color: #000;
}
.detail-list-item .text {
  flex: 1;
  font-size: 24rpx;
  color: #FF00FF;
  text-align: left;
}
.detail-list-item.favor .el-icon-star-on {
  color: inherit;
  font-size: inherit;
}
.detail-content .shop-title {
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  line-height: 1.4;
}
.priceFavor {
  height: 96rpx !important;
}
.priceFavor .text {
  font-size: 64rpx !important;
  color: red !important;
}
.priceFavor .icon {
  font-size: 56rpx !important;
  text-align: right !important;
  color: red !important;
}

