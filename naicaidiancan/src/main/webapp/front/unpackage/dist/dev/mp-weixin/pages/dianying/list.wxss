page {
	background: #EEEEEE;
}
view {
	font-size: 28rpx;
}
.tabView {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	background: #ffffff;
	height: 60rpx;
	margin-bottom: 20rpx;
	white-space: nowrap;
	box-shadow: 0px 1px 14px 0px rgba(38, 38, 35, 0.07);
	margin-top: 6rpx;
}
.tab {
	text-align: center;
	display: inline-block;
	margin: 0 12rpx;
	padding: 0 20rpx;
	width: auto;
	line-height: 56rpx;
	color: #333;
	font-size: 24rpx;
	border-radius: 40rpx;
	border-width: 2rpx;
	border-style: solid;
	border-color: rgba(215, 215, 215, 1);
	background-color: rgba(247, 247, 247, 1);
	box-shadow: 0 0 0px rgba(0, 0, 0, .3);
}
.tabActive {
	margin: 0 12rpx;
	padding: 0 20rpx;
	width: auto;
	line-height: 56rpx;
	color: rgba(0, 0, 0, 1);
	font-size: 24rpx;
	border-radius: 40rpx;
	border-width: 2rpx;
	border-style: solid;
	border-color: rgba(242, 199, 68, 1);
	background-color: rgba(242, 199, 68, 1);
	box-shadow: 0 0 0px rgba(0, 0, 0, .3);
}
.tab:last-of-type {
	border: none;
}
.uni-product-list {
	display: flex;
	width: 100%;
	flex-wrap: wrap;
	flex-direction: row;
	margin-top: 0rpx;
	justify-content: space-around;
}
.uni-product {
	padding: 10rpx;
	margin: 10rpx;
	display: flex;
	flex-direction: column;
	background: #FFFFFF;
}
.image-view {
	height: 330rpx;
	width: 330rpx;
	margin: 12rpx 0;
}
.uni-product-image {
	height: 330rpx;
	width: 330rpx;
}
.uni-product-title {
	width: 300rpx;
	word-break: break-all;
	display: -webkit-box;
	overflow: hidden;
	line-height: 1.5;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.uni-product-price {
	margin-top: 10rpx;
	font-size: 28rpx;
	line-height: 1.5;
	position: relative;
}
.uni-product-price-original {
	color: #e80080;
}
.uni-product-price-favour {
	color: #888888;
	text-decoration: line-through;
	margin-left: 10rpx;
}
.uni-product-tip {
	position: absolute;
	right: 10rpx;
	background-color: #ff3333;
	color: #ffffff;
	padding: 0 10rpx;
	border-radius: 5rpx;
}
uni-image>._div,
uni-image>._img {
	width: 100%;
	height: 140px;
	object-fit: cover;
}
.add-btn {
	position: fixed;
	left: 30rpx;
	right: 30rpx;




	bottom: 16rpx;

	z-index: 95;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 690rpx;
	height: 80rpx;
	font-size: 32rpx;
	color: #fff;
	background-color: red;
	border-radius: 10rpx;
	box-shadow: 1px 2px 5px rgba(219, 63, 96, 0.4);
}
.list {
	padding: 20rpx 20rpx 20rpx;
}
.listm {
	background: #fff;
	border-radius: 15rpx;
	box-shadow: 0 0 2rpx rgba(0, 0, 0, 0.1);
	margin-bottom: 20rpx;
	padding: 30rpx;
}
.listmpic {
	border-radius: 10rpx;
	width: 166rpx;
	margin-right: 20rpx;
}
.listmr {
	/* width: 460upx; */
	display: inline-block;
	flex: 1;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
}

